<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kelime Uzmanı</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    Kelime UZMANI
                </li>
                <li>
                    <a href="@Url.Action("Index","Word")" id="menu1"><i class="fa fa-file-word-o"></i> Kelimelerim</a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Lists")" id="menu2"><i class="fa fa-list-ul"></i> Listeler</a>
                </li>
                <li>
                    <a href="javascript:void(0)" id="menu3"><i class="fa fa-cogs"></i> Çalışma Ekranı</a>
                </li>
                <li>
                    <a href="javascript:void(0)" id="menu4"><i class="fa fa-book"></i> Okuma Parçaları</a>
                </li>
                <li>
                    <a href="javascript:void(0)" id="menu5"><i class="fa fa-user"></i> Profilim</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12" style="padding-left:25px;">
                        <a href="#menu-toggle" class="btn btn-outline-secondary" id="menu-toggle"><i class="fa fa-list"></i></a>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();

            $("#wrapper").toggleClass("toggled");
        });

    </script>
</body>
</html>

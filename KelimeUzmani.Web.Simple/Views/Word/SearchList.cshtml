@model List<KelimeUzmani.Entity.Word>

<div class="row">
    <div class="col-sm-12" style="margin-bottom:5px;">
        <div class="float-right" style="margin:3px;">
            @if (ViewBag.FromSearch == true)
            {<a href="javascript:void(0)" class="btn btn-outline-danger btn-sm" onclick="$(this).parent().parent().parent().slideUp();"><i class="fa fa-close"></i></a>}
        </div>


        <div class="row" style="margin:5px;">
            @{
                foreach (var item in Model)
                {
                    <div class="col-sm-2 col-lg-2 col-sm-2 wordplaka">
                        <div class="float-left">
                            @item.WordBody
                        </div>
                        <div class="float-right">
                            @if(ViewBag.FromSearch==true) { <a href="#" class="btn btn-sm " onclick="Ekle(@item.ID)"><i class="fa fa-plus-circle"></i></a>}
                        </div>

                    </div>

                }
            }
        </div>
    </div>
</div>
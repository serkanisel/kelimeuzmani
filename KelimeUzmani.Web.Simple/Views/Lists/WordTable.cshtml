@model IEnumerable<KelimeUzmani.Entity.WordListList>
<table class="table" id="tblList">
    @*<thead>
        <tr class="tablebaslik">
            <th>Kelime</th>
            <th>Anlamı</th>
            <th></th>
        </tr>
    </thead>*@
    <tbody>
        @{
            int a = 0;
            foreach (var item in Model)
            {
                a++;
                <tr id="WordOfList_@item.ID">
                    <td>@item.Word.WordBody</td>
                    <td >
                        <span id="td_@item.ID">

                        </span>
                        <script>
                            var name="#td_" + @item.ID;

                            $(name).html("@item.Word.DescriptionHTML");
                        </script>
                    </td>
                    <td><a href="javascript:void(0)" class="btn btn-outline-danger btn-sm float-right"><i class="fa fa-minus"></i></a></td>
                </tr>
            }
        }
    </tbody>
</table>

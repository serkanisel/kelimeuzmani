<script>

    function ItemSelected(ID) {
        var name = "#words_" + ID;
        
        $.ajax({
            url: '@Url.Action("GetWordsOfList", "Lists")',
            type: "POST",
            cache: true,
            async: true,
            data: { listID: ID },
            success: function (text, data) {
                $(name).html(text);
                $(name).show();
            },
            error: function (jqXhr, textStatus, errorThrown) {
                alert("bir hata oluştu");
            }
        });
    }

    function KelimeEkle(ID) {
        
        var name = "#words_" + ID;
        $.ajax({
            url: '@Url.Action("GetSearchWord", "Word")',
            type: "GET",
            cache: true,
            async: true,
            data: { listID: ID },
            success: function (text, data) {
                $(name).html(text);
                $(name).show();
            },
            error: function (jqXhr, textStatus, errorThrown) {
                alert("bir hata oluştu");
            }
        });
    }
</script>
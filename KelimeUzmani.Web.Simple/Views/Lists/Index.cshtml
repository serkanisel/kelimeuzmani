@model IEnumerable<KelimeUzmani.Entity.WordList>
<h3 class="pageTitle">Listeler</h3>

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#keuList" role="tab">KeU Listeleri</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#myLists" role="tab">Benim Listelerim</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content padding10">
    <div class="tab-pane fade show  active" id="keuList" role="tabpanel">
        <div id="listPart">
            @Html.Partial("ListView")
        </div>
    </div>
    <div class="tab-pane fade " id="myLists" role="tabpanel">
        <div class="padding10">
            <div class="row">
                <div class="input-group">
                    <input type="text" class="form-control" id="txtName">
                    <span class="input-group-btn">
                        <button class="btn btn-outline-warning" type="button" onclick="Ekle()"><i class="fa fa-plus-circle"></i> Ekle</button>
                    </span>
                </div>
            </div>
            <div class="row">

            </div>
        </div>
    </div>

</div>


<div id="result">

</div>
<script>
    function Ekle() {
        var name = $("#txtName").val();

        $.ajax({
            url: '@Url.Action("SaveList", "Lists")',
            type: "POST",
            cache: false,
            async: false,
            data: { name: name },
            success: function (text, data) {
                $("#listPart").html(text);
            },
            error: function (jqXhr, textStatus, errorThrown) {
                alert("bir hata oluştu");
            }
        });
    }

</script>